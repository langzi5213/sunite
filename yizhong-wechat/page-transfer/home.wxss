.view-picker {
  height: 80rpx;
  display: flex;
   flex-direction: row;
   justify-content: center;
    
    padding: 20rpx;
}

.view-button {
  display: flex;
  background: #fff;
  height: 80rpx;
  width: 150rpx;
  margin-left: 10rpx;
  border-radius: 5px;
  line-height: 80rpx;
  align-items: center;
  flex-direction: column;
  border: solid 1rpx #ccc;
}

.text1 {
  display: flex;
  height: 150rpx;
  width: 100%;
  margin: 10rpx;
  line-height: 150rpx;
  align-items: center;
  flex-direction: column;
   font-size: 45rpx; 
}
.view-text{
  display: flex;
  height: 150rpx;
  width: 100%;
  margin: 10rpx;
   
  align-items: center;
  flex-direction: column;
   font-size: 45rpx; 
}

.view-input {
  height: 80rpx;
  background-color: #fff;
  display: flex;
  margin-left: 10rpx;
  flex-direction: row;
  align-items: center;
  border: solid 1rpx #ccc;
  border-radius: 20px;
}

.input-search1 {
  width: 300rpx;
  margin-left: 20rpx;
}

.picker-view {
  width: 100%;
  height: 200px;
  background: #eee;
}.picker-view-column{
  margin-left: 200rpx;
}
.view-picker-view{
   position: fixed;
  bottom: 0; 
  width:100%;
  height:300px;
  background: #eee 
}
.blank{
  background: #eee;
  height: 100rpx;
}