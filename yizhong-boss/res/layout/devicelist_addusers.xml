<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0088ff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:layout_width="42sp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@drawable/return2"
            android:onClick="Toreturn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="添加设备"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入设备上安装的手机串号" />

        <EditText
            android:id="@+id/et_user_devicename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入设备名称"  />
        <EditText
            android:id="@+id/et_user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入司机姓名"  />
        <EditText
            android:id="@+id/et_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入司机手机号"  />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bt_login"
            android:onClick="adduser"
            android:textColor="#ffffff"
            android:text="添加挖掘机" />
    </LinearLayout>
      
 </LinearLayout>