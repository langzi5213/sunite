<view class="forms">
  <form bindsubmit="submit" bindreset="reset">

    <view class="inputview-row">
      投保人姓名：
      <input class="input-row" name="applicantName" bindinput="applicantName" type="text" placeholder="{{applicantName}}" />
    </view>
    <view class="inputview-row">
      投保人证件：
      <input class="input-row" name="applicantId" bindinput="applicantId" placeholder="{{applicantId}}" />
    </view>
    <view class="inputview-row">
      受益人姓名：
      <input class="input-row" name="beneficiaryName" bindinput="beneficiaryName" placeholder="{{beneficiaryName}}" />
    </view>
    <view class="inputview-row">
      被保险人姓名：
      <input class="input-row" name="insurantName" bindinput="insurantName" placeholder="{{insurantName}}" />
    </view>
    <view class="inputview-row">
      被保险人手机号：
      <input class="input-row"  name="insurantPhone" bindinput="insurantPhone" placeholder="{{insurantPhone}}" />
    </view>

    <view class="inputview-row">
      发票抬头：
      <input class="input-row"  name="invoiceTitle" bindinput="invoiceTitle" placeholder="{{invoiceTitle}}" />
    </view>

    <view class="inputview-row">
      购置日期：
      <picker mode="date" bindchange="buyDateChange" name="buydata">
        <view class="input-date">
          <view class="input-row">{{safeBuyDate}}</view>
        </view>
      </picker>
    </view>
    <view class="inputview-row">
      设备品牌：
      <input class="input-row"  name="deviceBrand" bindinput="deviceBrand" placeholder="{{deviceBrand}}" />
    </view>

    <view class="inputview-row">
      保单邮寄地址：
      <input class="input-row"  name="address" bindinput="address" placeholder="{{address}}" />
    </view>



    <view class="inputview-textarea">
      备注：
      <textarea class="input-textarea" name="remark" bindinput="remark" placeholder="{{remark}}"></textarea>
    </view>

    <button class="login-button" form-type="reset">重置</button>
    <button class="login-button" type="primary" form-type="submit">下一步</button>

  </form>
</view>